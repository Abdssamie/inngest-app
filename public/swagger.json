    "/api/workflows/{id}/run": {
      "post": {
        "summary": "Run a workflow",
        "description": "Runs a workflow by its ID for the authenticated user.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
